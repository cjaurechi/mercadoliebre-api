<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Registro', image: ''}) %>

<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<!-- Formulario de registro -->
	<div class="container products-wrapper">
		<div class="row justify-content-center">
			<div class="col-12">
				<h2 class="products-title">Registro</h2>
			</div>
			<div class="col-6">
				<form action="/users/register" method="POST" enctype="multipart/form-data">
					<div class="row product-detail">
						<div class="col-12">
							<label for="username" class="form-label required">Nombre de usuario </label>
							<input type="text" id="username" name="username" placeholder="Ej: gonza123"
								class="form-input" value="<%= typeof old != 'undefined' ? old.username : '' %>">
							<p class="error">
								<%= typeof errors == 'undefined' ? '' : errors.username ? errors.username.msg : '' %>
							</p>
						</div>
						<div class="col-12">
							<label for="email" class="form-label required">Email </label>
							<input type="text" id="email" name="email" placeholder="Ej: gonza@dh.com" class="form-input"
								value="<%= typeof old != 'undefined' ? old.email : '' %>">
							<p class="error">
								<%= typeof errors == 'undefined' ? '' : errors.email ? errors.email.msg : '' %></p>
						</div>
						<div class="col-12 row">
							<label for="image" class="form-label col-12">Avatar</label>
							<input type="file" id="image" name="image" class="form-file col-12">
							<div class="col-12">
								<p class="error">
									<%= typeof errors == 'undefined' ? '' : errors.image ? errors.image.msg : '' %></p>
							</div>
						</div>
						<div class="col-12">
							<label for="password" class="form-label required">Contraseña </label>
							<input type="password" id="password" name="password" class="form-input">
							<p class="error">
								<%= typeof errors == 'undefined' ? '' : errors.password ? errors.password.msg : '' %>
							</p>
						</div>
						<div class="col-12">
							<label for="retype" class="form-label required">Repite la contraseña </label>
							<input type="password" id="retype" name="retype" class="form-input">
							<p class="error">
								<%= typeof errors == 'undefined' ? '' : errors.retype ? errors.retype.msg : '' %></p>
						</div>
						<div class="mt-5 col-12">
							<button type="submit" class="buy-now-button">Enviar</button>
							<button type="reset" class="delete-button">Borrar datos</button>
						</div>
						<div class="mt-3 col-12">
							<p>(<span class="required"></span>) Campos obligatorios.</p>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
	<!-- /Formulario de registro -->

	<!-- Footer -->
	<%- include('../partials/footer') %>
	<!-- /Footer -->
</body>

</html>