<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', { title: 'Inicio', js: 'products' }) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Basado en tu última visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu última visita</h2>
			</div>
			<div class="col-12">
				<div class="row" id="latest-products">
					<!-- Show the "ultimos" products -->
					<% if (ultimos.length > 0) { %>
					<% ultimos.forEach(product => { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
								</figure>
								<article class="product-box_data">
									<h2>$<%= helpers.trunc(product.price - product.price * product.discount / 100) %>
									</h2>
									<% if(product.discount > 0) { %>
									<span><%= product.discount %> % OFF</span>
									<% } %>
									<p><%= product.name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>

					<% }); %>
					<% } else { %>
					<div class="col-12">
						<h2 class="noproducts">Aun se encontraron productos</h2>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<!-- /Basado en tu última visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<div class="row" id="offers-products">

				<!-- Show the "in-sale" products -->
				<% if (inSale.length > 0) { %>
				<% inSale.forEach(product => { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= product.id %> ">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
							</figure>
							<article class="product-box_data">
								<h2>$<%= helpers.trunc(product.price - product.price * product.discount / 100) %></h2>
								<span><%= product.discount %> % OFF</span>
								<p><%= product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>

				<% }); %>
				<% } else { %>
				<div class="col-12">
					<h2 class="noproducts">Aun se encontraron productos</h2>
				</div>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- Footer -->
	<%- include('partials/footer') %>
	<!-- /Footer -->
</body>

</html>